<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="Theme.Crf.Settings">
        <item name="android:textColor">@color/text_color_settings_title</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@color/text_color_settings_summary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="preferenceTheme">@style/Theme.Crf.Settings.Preference</item>
    </style>

    <style name="Theme.Crf.Settings.Preference" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">@style/PreferenceFragment.Sample</item>
        <item name="preferenceFragmentStyle">@style/PreferenceFragment.Sample</item>
    </style>

    <style name="Theme.Crf.Main">
        <item name="toolbarTheme">@style/Theme.Crf.Toolbar.Main</item>
        <item name="colorPrimaryDark">@color/deepGreen</item>
    </style>

    <style name="Theme.Crf.Onboarding">
        <item name="android:windowBackground">@color/deepGreen</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="Theme.Crf.Video">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="Crf.WhiteDeepGreen.RoundedCornerMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/crf_rounded_button_white</item>
        <item name="android:textColor">@color/deepGreen</item>
    </style>

</resources>